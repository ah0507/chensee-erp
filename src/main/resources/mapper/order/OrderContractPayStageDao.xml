            <if test="folderId!=null"> folder_id=#{folderId},</if>
        </trim>
        WHERE id = #{id}
    </update>

    <delete id="deleteOrderContractPayStage">
        UPDATE t_order_contract_pay_stage set status = 1 WHERE id = #{id}
    </delete>

    <delete id="deleteByOrderId">
        UPDATE t_order_contract_pay_stage set status = 1 WHERE order_id = #{id}
    </delete>

