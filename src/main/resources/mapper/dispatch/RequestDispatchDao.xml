    </update>
    <delete id="deleteRequestDispatch">
        UPDATE t_request_dispatch set status = 1 WHERE id = #{id}
    </delete>
    <select id="getRequestDispatchBySupplier" resultType="net.chensee.platform.erp.action.dispatch.vo.RequestDispatchVo">
        select ds.*, c.id as supplierId, c.name as supplierName, c.number as supplierNumber,
        o.id as orderId, o.name as orderName, u1.id as linkmanId, u1.name as linkmanName,
        ct.id as contractId, ct.name as contractName, ct.number as contractNumber
        from t_request_dispatch ds
        left join t_supplier c on ds.supplier_id = c.id
        left join t_order o on ds.order_id = o.id
        left join t_contract ct on ds.contract_id = ct.id
        left join t_linkman u1 on ds.linkman_id = u1.id
        <where>
            <if test="supplierName != null">
                and c.name like concat('%', #{supplierName,jdbcType=VARCHAR},'%')
            </if>
            <if test="supplierNo != null">
                and c.number like concat('%', #{supplierNo,jdbcType=VARCHAR},'%')
            </if>
            <if test="true">
                and ds.status = 0
            </if>
        </where>
        order by ds.update_time desc limit #{pageStart}, #{pageSize}
    </select>

    <select id="getById" resultType="net.chensee.platform.erp.action.dispatch.vo.RequestDispatchVo">
        select ds.*, c.id as supplierId, c.name as supplierName, c.number as supplierNumber,
        o.id as orderId, o.name as orderName, u1.id as linkmanId, u1.name as linkmanName,
